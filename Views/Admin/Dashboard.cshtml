@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">Admin Dashboard</h1>
            <p class="text-muted">Overview of platform activity.</p>
        </div>
        <a asp-action="ApproveProviders" class="btn btn-primary">
            <i class="fas fa-user-check me-2"></i>Pending Approvals
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary me-3">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <h6 class="card-subtitle text-muted text-uppercase mb-0">Total Users</h6>
                    </div>
                    <h2 class="card-title mb-0">@ViewBag.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success me-3">
                            <i class="fas fa-user-tie fa-lg"></i>
                        </div>
                        <h6 class="card-subtitle text-muted text-uppercase mb-0">Providers</h6>
                    </div>
                    <h2 class="card-title mb-0">@ViewBag.TotalProviders</h2>
                </div>
            </div>
        </div>
         <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info me-3">
                            <i class="fas fa-briefcase fa-lg"></i>
                        </div>
                        <h6 class="card-subtitle text-muted text-uppercase mb-0">Active Services</h6>
                    </div>
                    <h2 class="card-title mb-0">--</h2>
                </div>
            </div>
        </div>
         <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning me-3">
                            <i class="fas fa-calendar-check fa-lg"></i>
                        </div>
                        <h6 class="card-subtitle text-muted text-uppercase mb-0">Total Bookings</h6>
                    </div>
                    <h2 class="card-title mb-0">--</h2>
                </div>
            </div>
        </div>
    </div>
</div>
