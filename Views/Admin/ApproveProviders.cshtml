@model IEnumerable<SkillHub.Models.ApplicationUser>
@{
    ViewData["Title"] = "Approve Providers";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">Pending Approvals</h1>
            <p class="text-muted">Review and approve new service provider accounts.</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="text-muted mb-3">
                <i class="fas fa-check-circle fa-4x text-success"></i>
            </div>
            <h3>All Caught Up!</h3>
            <p class="text-muted">There are no pending provider approvals at this time.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3">User Details</th>
                                <th class="py-3">Email</th>
                                <th class="py-3 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light p-2 rounded me-3">
                                                <i class="fas fa-user text-primary"></i>
                                            </div>
                                            <div class="fw-bold">@item.FullName</div>
                                        </div>
                                    </td>
                                    <td>@item.Email</td>
                                    <td class="text-end pe-4">
                                        <form asp-action="ApproveProvider" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">
                                                <i class="fas fa-check me-1"></i> Approve
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
