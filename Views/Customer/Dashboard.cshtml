@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container py-5">
    <div class="row mb-5 align-items-center">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold mb-3">Welcome to SkillHub</h1>
            <p class="lead text-muted">Find the perfect professional for your needs or manage your existing bookings.</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-search me-2"></i>Find Services
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Search Card -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 hover-shadow transition-all">
                <div class="card-body p-4 text-center">
                    <div class="bg-primary bg-opacity-10 p-4 rounded-circle d-inline-block mb-4 text-primary">
                        <i class="fas fa-search fa-2x"></i>
                    </div>
                    <h3 class="h4">Find a Service</h3>
                    <p class="text-muted mb-4">Browse through our list of expert providers and find exactly what you need.</p>
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="text" name="query" class="form-control" placeholder="Search services..." aria-label="Search">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bookings Card -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 hover-shadow transition-all">
                <div class="card-body p-4 text-center">
                    <div class="bg-success bg-opacity-10 p-4 rounded-circle d-inline-block mb-4 text-success">
                        <i class="fas fa-history fa-2x"></i>
                    </div>
                    <h3 class="h4">Your Bookings</h3>
                    <p class="text-muted mb-4">View your past and upcoming bookings, check status, and manage appointments.</p>
                    <a asp-action="BookingHistory" class="btn btn-outline-success btn-lg w-100">
                        View Booking History
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
