@model IEnumerable<SkillHub.Models.Booking>
@{
    ViewData["Title"] = "Booking History";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">My Bookings</h1>
            <p class="text-muted">Track the status of your service requests.</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-plus me-2"></i>New Booking
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="text-muted mb-3">
                <i class="far fa-calendar-times fa-4x"></i>
            </div>
            <h3>No bookings yet</h3>
            <p class="text-muted">You haven't booked any services yet. Start exploring!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Browse Services</a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3">Service</th>
                                <th class="py-3">Date</th>
                                <th class="py-3">Status</th>
                                <th class="py-3 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light p-2 rounded me-3">
                                                <i class="fas fa-clipboard-list text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">Service #@item.ServiceId</div>
                                                <small class="text-muted">Booking ID: @item.BookingId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="far fa-calendar me-2 text-muted"></i>
                                            @item.BookingDate.ToString("MMM dd, yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill px-3 py-2 
                                            @(item.Status == "Pending" ? "bg-warning text-dark" : 
                                              item.Status == "Accepted" ? "bg-success" : 
                                              item.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-secondary">
                                            View Service
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
