@model IEnumerable<SkillHub.Models.Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 fw-bold text-dark">Manage Bookings</h1>
            <p class="text-muted">Track and manage your incoming service requests.</p>
        </div>
        <div class="btn-group">
            <button class="btn btn-outline-secondary active">All</button>
            <button class="btn btn-outline-secondary">Pending</button>
            <button class="btn btn-outline-secondary">Completed</button>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm py-5 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="far fa-calendar-times fa-3x text-muted opacity-25"></i>
                </div>
                <h5 class="text-muted">No bookings found</h5>
                <p class="text-muted small">You haven't received any bookings yet.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Booking ID</th>
                            <th class="py-3">Service</th>
                            <th class="py-3">Date</th>
                            <th class="py-3">Status</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.BookingId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3 text-primary">
                                            <i class="fas fa-briefcase"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">Service #@item.ServiceId</div>
                                            <div class="small text-muted">Customer Request</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="far fa-calendar text-muted"></i>
                                        @item.BookingDate.ToShortDateString()
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(item.Status == "Pending" ? "bg-warning" : item.Status == "Accepted" ? "bg-success" : "bg-danger") rounded-pill px-3">
                                        @item.Status
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (item.Status == "Pending")
                                    {
                                        <div class="d-flex justify-content-end gap-2">
                                            <form asp-action="UpdateBookingStatus" method="post">
                                                <input type="hidden" name="bookingId" value="@item.BookingId" />
                                                <input type="hidden" name="status" value="Accepted" />
                                                <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">
                                                    <i class="fas fa-check me-1"></i> Accept
                                                </button>
                                            </form>
                                            <form asp-action="UpdateBookingStatus" method="post">
                                                <input type="hidden" name="bookingId" value="@item.BookingId" />
                                                <input type="hidden" name="status" value="Rejected" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                    <i class="fas fa-times me-1"></i> Reject
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-light text-muted" disabled>Processed</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>