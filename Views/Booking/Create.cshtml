@model SkillHub.Models.Booking

@{
    ViewData["Title"] = "Book Service";

    string GetGradient(int id) {
        var gradients = new[] {
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "linear-gradient(135deg, #2af598 0%, #009efd 100%)",
            "linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%)",
            "linear-gradient(135deg, #f6d365 0%, #fda085 100%)",
            "linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%)",
            "linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)",
            "linear-gradient(120deg, #d4fc79 0%, #96e6a1 100%)",
            "linear-gradient(120deg, #f093fb 0%, #f5576c 100%)"
        };
        return gradients[id % gradients.Length];
    }

    string GetIcon(string title) {
        if (string.IsNullOrEmpty(title)) return "fa-briefcase";
        title = title.ToLower();
        if (title.Contains("clean")) return "fa-broom";
        if (title.Contains("electr")) return "fa-bolt";
        if (title.Contains("plumb")) return "fa-faucet";
        if (title.Contains("water")) return "fa-tint";
        if (title.Contains("mech") || title.Contains("repair") || title.Contains("fix")) return "fa-wrench";
        if (title.Contains("car") || title.Contains("auto")) return "fa-car";
        if (title.Contains("garden") || title.Contains("lawn") || title.Contains("grass")) return "fa-leaf";
        if (title.Contains("paint") || title.Contains("decor")) return "fa-paint-roller";
        if (title.Contains("mov") || title.Contains("shift")) return "fa-truck";
        if (title.Contains("teach") || title.Contains("tutor") || title.Contains("learn") || title.Contains("class")) return "fa-book-open";
        if (title.Contains("photo") || title.Contains("camera")) return "fa-camera";
        if (title.Contains("cook") || title.Contains("chef") || title.Contains("food")) return "fa-utensils";
        if (title.Contains("beauty") || title.Contains("hair") || title.Contains("salon")) return "fa-spa";
        if (title.Contains("fit") || title.Contains("gym") || title.Contains("yoga")) return "fa-dumbbell";
        if (title.Contains("code") || title.Contains("dev") || title.Contains("web")) return "fa-laptop-code";
        if (title.Contains("design") || title.Contains("art")) return "fa-palette";
        return "fa-briefcase";
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-5">
                <!-- Booking Form -->
                <div class="col-md-7">
                    <h2 class="mb-4">Complete Your Booking</h2>
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <form asp-action="Create" method="post">
                                <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>
                                <input type="hidden" asp-for="ServiceId" />
                                
                                <div class="mb-4">
                                    <label asp-for="BookingDate" class="form-label fw-bold">Select Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="far fa-calendar-alt text-muted"></i>
                                        </span>
                                        <input asp-for="BookingDate" class="form-control border-start-0 ps-0" type="date" />
                                    </div>
                                    <span asp-validation-for="BookingDate" class="text-danger small"></span>
                                    <div class="form-text mt-2">
                                        <i class="fas fa-info-circle me-1 text-primary"></i>
                                        Please choose a date at least 24 hours in advance.
                                    </div>
                                </div>

                                <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                                    <i class="fas fa-shield-alt text-success fa-2x me-3"></i>
                                    <div>
                                        <h6 class="alert-heading mb-1">Secure Booking</h6>
                                        <small class="text-muted">Your request will be sent to the provider for confirmation.</small>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        Confirm Booking
                                    </button>
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-outline-secondary">
                                        Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-md-5">
                    <div class="card bg-light border-0 shadow-sm sticky-top" style="top: 100px; z-index: 100;">
                        <div class="card-body p-4">
                            <h4 class="card-title mb-4">Booking Summary</h4>
                            
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="fw-bold mb-1">@ViewBag.ServiceTitle</h6>
                                    <small class="text-muted">Service</small>
                                </div>
                                @if (ViewBag.ImageUrl != null)
                                {
                                    <img src="@ViewBag.ImageUrl" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" alt="@ViewBag.ServiceTitle" />
                                }
                                else
                                {
                                    <div class="rounded d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px; background: @GetGradient(Model.ServiceId);">
                                        <i class="fas @GetIcon(ViewBag.ServiceTitle)"></i>
                                    </div>
                                }
                            </div>

                            <hr class="my-4">

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Service Price</span>
                                <span class="fw-bold">@ViewBag.Price.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="text-muted">Booking Fee</span>
                                <span class="text-success">Free</span>
                            </div>

                            <hr class="my-4">

                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Total</h5>
                                <h4 class="mb-0 text-primary">@ViewBag.Price.ToString("C")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
